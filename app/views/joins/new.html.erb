
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <%= form_for(Join.new, { controller: :joins, action: :create}) do |f| %>

      <div class="form-group">
        <%= f.number_field :course_id, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit 'join', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
