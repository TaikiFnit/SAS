<section class="devise">

  <h2>Sign up</h2>

  <div class="container">
    <div class="panel panel-primary">
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name) ) do |f| %>
        <%= devise_error_messages! %>

          <fieldset>
            <div class="form-group row">
              <%= f.label :name, class: "col-lg-2 control-label" %>
              <div class="col-lg-10">
                <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name' %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :email, class: "col-lg-2 control-label"  %>
              <div class="col-lg-10">
                <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :password, class: "col-lg-2 control-label"  %>

              <div class="col-lg-10">
                <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </div>
            </div>

            <div class="form-group row">
              <%= f.label :password_confirmation, class: "col-lg-2 control-label"  %><br />
              <div class="col-lg-10">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :image_url, class: "col-lg-2 control-label"  %><br />
              <div class="col-lg-10">
                <%= f.text_field :image_url, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= f.submit "Sign up!", class: 'btn btn-primary' %>
            </div>
          </fieldset>

          <%= render "devise/shared/links" %>

        <% end %>
      </div>
    </div>
  </div>

</section>
